{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "Qdrant": {
    "Host": "localhost",
    "Port": 6333,
    "CollectionName": "DNFileRAG",
    "VectorSize": 1536
  },
  "FileWatcher": {
    "WatchPath": "/app/data/documents",
    "IncludeSubdirectories": true,
    "SupportedExtensions": [".pdf", ".docx", ".txt", ".md", ".html"],
    "DebounceMilliseconds": 500
  },
  "Chunking": {
    "ChunkSize": 1500,
    "ChunkOverlap": 200
  },
  "Embedding": {
    "Provider": "OpenAI",
    "OpenAI": {
      "ApiKey": "",
      "Model": "text-embedding-3-small"
    },
    "AzureOpenAI": {
      "Endpoint": "",
      "ApiKey": "",
      "DeploymentName": ""
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "nomic-embed-text"
    }
  },
  "Llm": {
    "Provider": "OpenAI",
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4o-mini"
    },
    "AzureOpenAI": {
      "Endpoint": "",
      "ApiKey": "",
      "DeploymentName": ""
    },
    "Anthropic": {
      "ApiKey": "",
      "Model": "claude-3-5-sonnet-20241022"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3.2"
    }
  },
  "Rag": {
    "DefaultTopK": 5,
    "DefaultTemperature": 0.2,
    "DefaultMaxTokens": 512,
    "MinRelevanceScore": 0.5,
    "SystemPrompt": "You are a helpful assistant that answers questions ONLY based on the provided context from indexed documents. If the context does not contain information relevant to answer the question, you MUST respond with: 'I don't have information about that in the indexed documents.' Do NOT make up information or use external knowledge. Always cite your sources using [Source N] format."
  },
  "ApiSecurity": {
    "RequireApiKey": true,
    "ApiKeys": []
  }
}
