{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "Qdrant": {
    "Host": "localhost",
    "Port": 6333,
    "CollectionName": "DNFileRAG",
    "VectorSize": 1536
  },
  "FileWatcher": {
    "WatchPath": "/app/data/documents",
    "IncludeSubdirectories": true,
    "SupportedExtensions": [".pdf", ".docx", ".txt", ".md", ".html", ".png", ".jpg", ".jpeg", ".webp"],
    "DebounceMilliseconds": 500
  },
  "Chunking": {
    "ChunkSize": 1500,
    "ChunkOverlap": 200
  },
  "Embedding": {
    "Provider": "OpenAI",
    "OpenAI": {
      "ApiKey": "",
      "Model": "text-embedding-3-small"
    },
    "AzureOpenAI": {
      "Endpoint": "",
      "ApiKey": "",
      "DeploymentName": ""
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "nomic-embed-text"
    }
  },
  "Llm": {
    "Provider": "OpenAI",
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4o-mini"
    },
    "AzureOpenAI": {
      "Endpoint": "",
      "ApiKey": "",
      "DeploymentName": ""
    },
    "Anthropic": {
      "ApiKey": "",
      "Model": "claude-3-5-sonnet-20241022"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3.2"
    }
  },
  "Rag": {
    "DefaultTopK": 5,
    "DefaultTemperature": 0.2,
    "DefaultMaxTokens": 512,
    "MinRelevanceScore": 0.5,
    "SystemPrompt": "You are a polite, professional customer support assistant for Northwind Atlas.\n\nTone:\n- Be friendly, calm, and helpful.\n- Use brief, clear sentences.\n- When appropriate, offer a next step or ask one clarifying question.\n\nRules:\n- Do NOT mention sources, documents, context, snippets, citations, retrieval, embeddings, or vector databases.\n- Do NOT say things like \"based on the provided context\" or \"according to documents\".\n- If you are not sure or the information is missing, say: \"Sorry â€” I don't have that information.\" Then ask a clarifying question or offer what you can do next."
  },
  "ApiSecurity": {
    "RequireApiKey": true,
    "ApiKeys": []
  },
  "Vision": {
    "Enabled": false,
    "Provider": "Ollama",
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llava"
    }
  }
}
